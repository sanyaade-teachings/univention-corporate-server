if [ "$1" = "-h" -o "$1" = "--help" ] ; then
	echo "$(basename $0) <package> [<package> ...]"
	echo ""
	echo "$(basename $0) performs a univention-install <package> "
	exit 1
fi

LOGFILE="/var/log/univention/actualise.log"
STATUSFILE="/var/lib/univention-updater/umc-univention-install.status"

echo "status=RUNNING" > "$STATUSFILE"
/usr/sbin/univention-install -y "$@"
if [ ! $? = 0 ] ; then
	echo "status=FAILED" > "$STATUSFILE"
	echo >> "$LOGFILE"
	echo "ERROR: An error occurred during package installation. Please check the logfile $LOGFILE."  >> "$LOGFILE"
	date >> "$LOGFILE"
	exit 1
fi

echo "status=DONE" > "$STATUSFILE"
echo >> "$LOGFILE"
echo "The package installation has been finished successfully at $(date)."  >> "$LOGFILE"

exit 0
