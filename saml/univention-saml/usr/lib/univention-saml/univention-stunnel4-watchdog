eval "$(ucr shell)"

ucs_server_sso_stunnel4_watchdog_timeout=${ucs_server_sso_stunnel4_watchdog_timeout:-30}
saml_idp_certificate_certificate=${saml_idp_certificate_certificate:-/etc/simplesamlphp/ucs-sso.${domainname}-idp-certificate.crt}
saml_idp_certificate_privatekey=${saml_idp_certificate_privatekey:-/etc/simplesamlphp/ucs-sso.${domainname}-idp-certificate.key}
ucs_server_sso_stunnel4_watchdog_active=${ucs_server_sso_stunnel4_watchdog_active:-false}

while true; do
	if [ "$ucs_server_sso_stunnel4_watchdog_active" = "true" ]; then
		# only check stunnel4 if active
		if systemctl is-active --quiet "stunnel4.service"; then
			timeout 5 bash -c "echo 'Q' | openssl s_client -connect localhost:11212 -cert '$saml_idp_certificate_certificate' -key '$saml_idp_certificate_privatekey' 1>/dev/null 2>/dev/null"
			# command was not successful. kill stunnel4 to restart it
			if [ $? -eq 124 ]; then
				echo "Killing stunnel4 to restart, it seems to be hanging. See https://forge.univention.org/bugzilla/show_bug.cgi?id=52196"
				kill -9 "$(pidof -x stunnel4)"
				for i in /var/run/univention-saml/*.socket; do
					test "$i" = "/var/run/univention-saml/memcached.socket" && continue
					echo "Removing $i after killing stunnel"
					rm  "$i"
				done
				fi
		fi
	fi
	sleep "${ucs_server_sso_stunnel4_watchdog_timeout}"
done

