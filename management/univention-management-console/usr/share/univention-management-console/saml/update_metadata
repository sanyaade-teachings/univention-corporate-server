# License with the Debian GNU/Linux or Univention distribution in file
# /usr/share/common-licenses/AGPL-3; if not, see
# <https://www.gnu.org/licenses/>.

metadata=$(python3 -c "from saml2.metadata import create_metadata_string; import sys; sys.stdout.buffer.write(create_metadata_string('/usr/share/univention-management-console/saml/sp.py', None, valid=None, cert=None, keyfile=None, mid=None, name=None, sign=False))") || exit 1
[ -z "$metadata" ] && exit 2
echo "$metadata" > "/usr/share/univention-management-console/saml/sp/metadata.xml"

eval "$(ucr shell hostname domainname umc/saml/sp-server ldap/base umc/saml/assertion-lifetime)"

if [ -n "$umc_saml_sp_server" ]; then
	fqdn="$umc_saml_sp_server"
else
	fqdn="$hostname.$domainname"
fi

udm saml/serviceprovider modify "$@" \
	--dn "SAMLServiceProviderIdentifier=https://$fqdn/univention/saml/metadata,cn=saml-serviceprovider,cn=univention,$ldap_base" \
	--set assertionLifetime="${umc_saml_assertion_lifetime:-300}" \
	--set serviceProviderMetadata="$metadata"

# TODO: add all the other things which UMC defines in the XML metadata
payload=$(python3 -c 'from univention.config_registry import ucr; json.dumps({"attributes": {"saml.assertion.lifespan": ucr.get("umc/saml/assertion/lifetime", 300)}})')
univention-keycloak saml/sp update "https://{fqdn}/univention/saml/metadata" "$payload"

exit $?
