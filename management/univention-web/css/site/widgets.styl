@import "../variables"

.umc .umcMultiInput
	margin-bottom: 1.5em

	.umcMultiInputContainer
		position: relative

	/* add a padding to the last element of a row */
	.umcMultiInputContainer .umcMultiInputLastRowEntry
		$layoutrow--make-space-for-buttons(1)

	.umcMultiInputRemoveButton
		umc-icon-button-aligned-to-textfield()
		padding: $labelpane-padding
		margin: 0

	.umcMultiInputAddButton
		margin: 0 0 0 $labelpane-padding-left

.umc .umcContainerWidget:last-child > .umcLabelPane .umcMultiInput
	margin-bottom: 0

.umc .umcLabelPane .umcTooltipIcon
	span.umcHelpIcon
		opacity: 0.6

	&:hover span.umcHelpIcon
		background-position: -60px -200px

	&:active span.umcHelpIcon
		background-position: -60px -200px
		opacity: 1

.umc .umcMultiInputDisabled .umcMultiInputContainer .umcMultiInputLastRowEntry
	padding-right: 0

.umc .umcLiveSearchSidebarRadioButtonGroup
	margin-top: 1.5em

.umc .umcMultiSelect
	border: 1px solid $border-color

.umc .umcProgressBar,
.umc .umcProgressInfo
	width: 400px
	> *
		width: 100%

.umc .umcProgressBar
	overflow: visible

	.umcProgressBarComponent
		height: 40px
		overflow: visible
		display: flex
		align-items: flex-end

	.umcProgressBarMessage
		height: 40px
		overflow: visible

.umc .umcSearchBox
	.umcSearchIcon
		margin: 0 material-grid(3, true) 0 0
		opacity: 1
		transition: opacity 0.25s

		&:hover
			opacity: 0.66

		&:active
			opacity: 1

	&.dijitDisabled .umcSearchIcon
		opacity: 0.3

